<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" />
    <script src="javascripts/jquery-3.1.1.min.js"></script>
  </head>
  <body>
    <!-- barra de navegacion con bootstrap, estatica en la parte superior -->
    <%- include('commons/nav-bar'); %>

    <!--panel 1-->
    <br>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Registrar Entidades</h3>
      </div>

      <div class="panel-body">

        <% if(msj1 != "" && msj1 != undefined){ %>
        <div class="alert alert-<%= msjTipo1 %>"><%= msj1 %></div>
        <% } %>

        <form name="f1" action="regEntidad" method="post">
          <div class="form-group">

            <div class="row">
              <div class="col-xs-2">
                <label for="inputdefault">Tipo de Entidad:</label>
                
                <select class="form-control" name="lstTipoEntidad" id="lstTipoEntidad">
                  <option value="0">Seleccione</option>
                  <% 
                  registrosAllTipoEntidades.forEach(function(registro){ %>
                  <option value="<%= registro.id_tipo_ent %>"<% if(vTipoEntidad == registro.id_tipo_ent){ %> selected<% } %>><%= registro.nombre_tipo_ent %></option>
                  <% }) %>
                </select>
              </div>

              <div class="col-xs-4">
                <label for="inputdefault">Nombre de la Persona o Empresa</label>
                <input class="form-control" type="text" id="txtEntidadNombre" name="txtEntidadNombre">
              </div>
            </div>
          </div>

          <input type="submit" class="btn btn-primary" value="Grabar">
        </form>

      </div>

    </div>
    <!--fin panel 1-->

    <!--panel 2-->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Entidades</h3>
      </div>

      <div class="panel-body">
          <% if(msj2 != "" && msj2 != undefined){ %>
          <div class="alert alert-<%= msjTipo2 %>"><%= msj2 %></div>
          <% } %>

          <table class="table table-striped">
              <tr>
                  <th>Tipo de Entidad</th>
                  <th>Nombre</th>
                  <th>Eliminar</th>
              </tr>

              <% registrosAllEntidades.forEach(function(registro){ %>

              <tr>
                <td><%= registro.nombre_tipo_ent %></td>
                <td><%= registro.nombre_ent %></td>
                <td><a href="/borrar-entidad-de-tabla-maestra/<%= registro.id_ent %>"><span class="glyphicon glyphicon-trash"></a></td>
              </tr>

              <% }) %>
          </table>
      </div>
      
    </div>
    <!--fin panel 2-->


  <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>