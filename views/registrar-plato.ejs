<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" />
    <script src="/javascripts/jquery-3.1.1.min.js"></script>
  </head>
  <body>
    <!-- barra de navegacion con bootstrap, estatica en la parte superior -->
    <%- include('commons/nav-bar'); %>

    <!--panel 1-->
    <br>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Registrar Platos</h3>
      </div>

      <div class="panel-body">

          <% if(msj1 != "" && msj1 != undefined){ %>
          <div class="alert alert-<%= msjTipo %>"><%= msj1 %></div>
          <% } %>

          <form name="f1" action="regAlmuerzoProgramado" method="post">
            <div class="form-group">
              <div class="row">
                <div class="col-md-4">
                  <label for="inputdefault">Nombre del Plato:</label>
                  <input type="text" name="nombre_alm_prog" id="nombre_alm_prog" class="form-control" value="<% if(nombreAlmuerzo != ''){ %><%= nombreAlmuerzo %><% } %>">
                </div>
                <div class="col-md-4">
                  <label for="inputdefault">En qué tipo se registrará?</label>
                  <select name="lstid_tipo_comida" id="lstid_tipo_comida" class="form-control">
                    <option value="0">Seleccionar</option>
                    <% registrosAllTipoComida.forEach(function(registro){ %>
                    <option value="<%= registro.id_tipo_comida %>"><%= registro.nombre_tipo_comida %></option>
                    <% }) %>
                  </select>
                </div>
              </div>
            </div>

            <input type="submit" class="btn btn-primary" value="Grabar">
          </form>
      </div> <!-- class="panel-body" -->

    </div>
    <!--fin panel 1-->

    <!--panel 2-->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Platos</h3>
      </div>

      <div class="panel-body">
          <% if(msj2 != "" && msj2 != undefined){ %>
          <div class="alert alert-<%= msjTipo2 %>"><%= msj2 %></div>
          <% } %>

          <table class="table table-striped">
              <tr>
                  <th>Tipo de Comida</th>
                  <th>Nombre del Plato</th>
                  <th>Eliminar</th>
              </tr>

              <% registrosAllAlmuerzos.forEach(function(registro){ %>

              <tr>
                <td><%= registro.nombre_tipo_comida %></td>
                <td><%= registro.nombre_alm_prog %></td>
                <td><a href="/borrar-plato-de-tabla-maestra/<%= registro.id_alm_prog %>"><span class="glyphicon glyphicon-trash"></span></a></td>
              </tr>

              <% }) %>
          </table>
      </div>
      
    </div>
    <!--fin panel 2-->


  <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>